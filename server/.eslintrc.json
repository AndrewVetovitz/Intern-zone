{
  "env": {
    "node": true,
    "es6": true
  },
    "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
        "impliedStrict": true
    }
  },
  "extends": "airbnb-base",
  "rules": {
    "indent": ["error", 4],
    "comma-dangle": ["error", "never"],
    "sort-imports": ["error"],
    "prefer-const": ["error"],
    "no-lonely-if": ["error"],
    "eqeqeq": ["error", "always"],
    "max-len": [1, 120, 2, {"ignoreComments": true}],
    "quote-props": [1, "consistent-as-needed"],
    "no-cond-assign": [2, "except-parens"],
    "radix": 0,
    "space-infix-ops": 0,
    "no-unused-vars": [1, {"vars": "local", "args": "none"}],
    "default-case": 0,
    "no-else-return": 0,
    "no-param-reassign": 0,
    "quotes": 0,
    "object-shorthand": 0
  }
}